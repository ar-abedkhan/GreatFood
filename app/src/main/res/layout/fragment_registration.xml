<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/food2"
    tools:context=".Fragmrnt.RegistrationFragment">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_20sdp"
        android:background="@drawable/whiteback"
        android:transitionName="transition_signup"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintTop_toTopOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_12sdp"
                android:orientation="vertical">


                <!--        <ImageView-->
                <!--            android:id="@+id/signup_back_button"-->
                <!--            android:layout_width="wrap_content"-->
                <!--            android:layout_height="wrap_content"-->
                <!--            android:padding="@dimen/_3ssp"-->
                <!--            android:src="@drawable/back_icon"-->
                <!--            android:transitionName="transition_back_arrow_btn" />-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_25sdp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Register to,"
                        android:textAlignment="viewStart"
                        android:includeFontPadding="false"
                        android:textAllCaps="false"
                        android:textColor="@color/white_background"
                        android:textSize="@dimen/_22sdp"
                        android:textStyle="bold"
                        android:transitionName="transition_title_text" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/abril_fatface"
                        android:text="Being with us"
                        android:textAlignment="center"

                        android:textAllCaps="false"
                        android:textColor="@color/white_background"
                        android:textSize="@dimen/_28sdp"
                        android:textStyle="bold"
                        android:transitionName="transition_title_text" />




                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_35sdp"
                    android:orientation="vertical">





                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Your Name"
                        android:textColorHint="@color/white_background"
                        app:boxStrokeColor="@color/white_background"
                        app:boxStrokeWidthFocused="@dimen/_1sdp"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/white_background"
                        app:hintTextColor="@color/white_background"
                        app:startIconDrawable="@drawable/ic_baseline_person_24"
                        app:startIconTint="@color/white_background">


                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/userName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/poppins_medium"
                            android:inputType="textEmailAddress"
                            android:textColor="@color/white_background"
                            android:textSize="@dimen/_14sdp" />


                    </com.google.android.material.textfield.TextInputLayout>





                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Email"
                        android:textColorHint="@color/white_background"
                        app:boxStrokeColor="@color/white_background"
                        app:boxStrokeWidthFocused="@dimen/_1sdp"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/white_background"
                        app:hintTextColor="@color/white_background"
                        app:startIconDrawable="@drawable/ic_baseline_email_24"
                        app:startIconTint="@color/white_background">


                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/userMail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/poppins_medium"
                            android:inputType="textEmailAddress"
                            android:textColor="@color/white_background"
                            android:textSize="@dimen/_14sdp" />


                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Password"
                        android:textColorHint="@color/white_background"
                        app:boxStrokeColor="@color/white_background"
                        app:boxStrokeWidthFocused="@dimen/_1sdp"
                        app:endIconTint="@color/white_background"
                        app:hintTextColor="@color/white_background"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleTint="@color/white_background"
                        app:startIconDrawable="@drawable/ic_baseline_security_24"
                        app:startIconTint="@color/white_background">


                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/signup_password"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="@dimen/_15sdp"
                            android:inputType="textPassword"
                            android:textColor="@color/white_background" />


                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>



                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >


                    <androidx.appcompat.widget.AppCompatButton
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:id="@+id/registration_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:background="@drawable/white"
                        android:backgroundTint="@color/white"
                        android:elevation="@dimen/_3ssp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Registration"

                        android:textColor="@color/black_textColor"
                        android:textSize="@dimen/_20sdp"
                        android:textAllCaps="false"
                        android:transitionName="transition_next_btn" />


                    <!--        Progressbar-->
                    <ProgressBar
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:id="@+id/progressbar"
                        android:layout_marginTop="@dimen/_20sdp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/white_background"/>


                </androidx.constraintlayout.widget.ConstraintLayout>



                <TextView
                    android:textAlignment="viewStart"
                    android:layout_gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:background="#00000000"
                    android:textSize="@dimen/_14sdp"
                    android:fontFamily="@font/poppins_medium"
                    android:textStyle="bold"
                    android:onClick="callLoginFromSignUp"
                    android:text="Don't you have any accout?"
                    android:textColor="@color/white_background"
                    android:transitionName="transition_login_btn" />




                <TextView
                    android:id="@+id/logein_button"
                    android:textAlignment="viewEnd"
                    android:layout_gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white"
                    android:textSize="@dimen/_16sdp"
                    android:fontFamily="@font/poppins_medium"
                    android:textStyle="bold"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingTop="@dimen/_6sdp"
                    android:paddingBottom="@dimen/_4sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:onClick="callLoginFromSignUp"
                    android:text="Logein"
                    android:textColor="@color/black_textColor"
                    android:transitionName="transition_login_btn" />












            </LinearLayout>
        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>